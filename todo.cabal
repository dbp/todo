                     , wai
                     , warp
                     , digestive-functors
                     , mtl
                     , lucid
                     , resourcet
                     , http-types
                     , bytestring
                     , wai-extra
                     , directory
                     , postgresql-simple
                     , resource-pool
                     , heroku
                     , time
                     , wai-middleware-rollbar
                     , dotenv
                     , pushover
                     , parsec
